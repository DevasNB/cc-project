After creating WebServer VM
cd /var/www/html
git clone https://github.com/DevasNB/cc-project.git ccproject
(to pull:
sudo rm -r ccproject
and git clone again
)

After creating SQLServer VM

sudo apt-get update
sudo apt-get install mysql-server
sudo systemctl start mysql.service~

sudo sed -i "s/.*bind-address.*/bind-address = 0.0.0.0/" /etc/mysql/mysql.conf.d/mysqld.cnf

DB_PASSWORD="CCPDBPassword"
DB_USER="CCPDBUser"

sudo mysql --execute "CREATE USER $DB_USER@'%' IDENTIFIED BY '$DB_PASSWORD';"
sudo mysql --execute "GRANT ALL PRIVILEGES ON * . * TO $DB_USER@'%';"
sudo mysql --execute "FLUSH PRIVILEGES;"

sudo service mysql stop
sudo service mysql start